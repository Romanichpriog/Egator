<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TeoriaFragmen"
    android:background="@color/backgroung_colour">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="@dimen/teoria_margin"
            android:id="@+id/tv_what_to_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_teoria"
            android:text="Что надо сделать"
            android:padding="@dimen/padding_teoria_text"
            android:gravity="center"/>
        <TextView
            android:layout_margin="@dimen/teoria_margin"
            android:id="@+id/tv_tems_in_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_teoria"
            android:padding="@dimen/padding_teoria_text"
            android:gravity="center"
            android:text="Какие темы изучаются"/>
        <TextView
            android:layout_margin="@dimen/teoria_margin"
            android:id="@+id/tv_link_to_teoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_teoria"
            android:padding="@dimen/padding_teoria_text"
            android:gravity="center"
            android:text="link"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Перейти к заданиям"
            android:textSize="25sp"
            android:padding="20dp"
            android:layout_margin="15dp"/>









    </LinearLayout>


</FrameLayout>